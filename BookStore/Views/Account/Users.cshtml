@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" asp-controller="Account" asp-action="Register">| + Register New User |</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>User List</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Action</th> <!-- Ajout de la colonne Action -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <a class="btn btn-success" asp-controller="Account" asp-action="Edit" asp-route-id="@user.Id"><i class="bi bi-pen"></i> Edit</a> <!-- Lien pour la modification -->
                                <form asp-controller="Account" asp-action="Delete" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')"><i class="bi bi-trash"></i>Delete</button> <!-- Formulaire pour la suppression -->
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
