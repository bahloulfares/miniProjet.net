@model BookStore.Models.Domain.Book

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Book</h3>
            <form asp-controller="Book" asp-action="Update" enctype="multipart/form-data" method="post">
                <input type="hidden" class="form-control" asp-for="Id" />
                <input type="hidden" asp-for="ImagePath" />

                <div class="form-group">
                    <label asp-for="Title">Title *</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="ImagePath" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input asp-for="ImagePath" type="file" class="custom-file-input form-control">
                            <label class="custom-file-label">Choisir une image</label>
                        </div>
                    </div>
                </div>


                <div class="form-group row col-sm-4 offset-4">
                    <img name="imageEmp" src="@Url.Content("~/Images/" + Model.ImagePath)" asp-append-version="true" height="100" width="100" />
                </div>

                <div class="form-group">
                    <label asp-for="GenreId">Genre *</label>
                    <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Isbn">Isbn *</label>
                    <input type="text" class="form-control" asp-for="Isbn" />
                    <span asp-validation-for="Isbn" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TotalPages">Total Pages *</label>
                    <input type="number" class="form-control" asp-for="TotalPages" />
                    <span asp-validation-for="TotalPages" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="AuthorId">Author *</label>
                    <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PublisherId">Publisher *</label>
                    <select asp-for="PublisherId" asp-items="Model.PublisherList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Book/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}

